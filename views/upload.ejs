<%- include('layouts/layout') %>
<div class="container">
  <h1 class="text-center">File Upload</h1>
  <div class="row">
    <div class="col-10 col-lg-6 mx-auto">
      <form
        action="/upload"
        method="POST"
        enctype="multipart/form-data"
        class="border border-dark p-4"
      >
        <div class="form-group">
          <label for="file title" class="text-primary text-capitalize"
            >Video Title</label
          >
          <input
            type="text"
            class="form-control"
            id="fileTitle"
            name="title"
            placeholder=" enter video title"
          />
        </div>
        <div class="form-group">
          <label for="file" class="text-primary text-capitalize"
            >choose your file</label
          >
          <input
            type="file"
            class="form-control-file"
            name="myVideo"
            id="videoFile"
          />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>
  </div>
</div>
